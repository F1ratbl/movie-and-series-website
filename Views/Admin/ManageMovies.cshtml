@model List<MovieModel>
@{
    ViewData["Title"] = "Film ve Dizi Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Film ve Dizi Yönetimi</h2>
        <a asp-action="AddMovie" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Yeni Film/Dizi Ekle
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Poster</th>
                    <th>Başlık</th>
                    <th>Kategori</th>
                    <th>Yıl</th>
                    <th>Puan</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr>
                        <td>
                            <img src="@movie.AfişUrl" alt="@movie.Ad" style="width: 50px; height: 75px; object-fit: cover;">
                        </td>
                        <td>@movie.Ad</td>
                        <td>@movie.Tür</td>
                        <td>@movie.Yil</td>
                        <td>
                            <div class="rating">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= movie.Puan ? "-fill" : "")"></i>
                                }
                                <span class="ms-2">@movie.Puan.ToString("F1")</span>
                            </div>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-danger btn-sm" 
                                        onclick="confirmDelete(@movie.Id, '@movie.Ad')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Silme Onay Modalı -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bg-dark text-light">
            <div class="modal-header">
                <h5 class="modal-title">Silme Onayı</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p><span id="movieTitle"></span> başlıklı film/diziyi silmek istediğinizden emin misiniz?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <form id="deleteForm" asp-action="DeleteMovie" method="post">
                    <input type="hidden" id="movieId" name="id" />
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            document.getElementById('movieId').value = id;
            document.getElementById('movieTitle').textContent = title;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
} 