@model MovieModel
@{
    ViewData["Title"] = "Film/Dizi Düzenle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card bg-dark text-light">
                <div class="card-header">
                    <h3 class="mb-0">Film/Dizi Düzenle</h3>
                </div>
                <div class="card-body">
                    <form asp-action="EditMovie" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="Ad" class="form-label">Başlık</label>
                            <input asp-for="Ad" class="form-control" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Açıklama" class="form-label">Açıklama</label>
                            <textarea asp-for="Açıklama" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Açıklama" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Tür" class="form-label">Kategori</label>
                            <input asp-for="Tür" class="form-control" />
                            <span asp-validation-for="Tür" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="VizyonTarihi" class="form-label">Yayın Tarihi</label>
                            <input asp-for="VizyonTarihi" class="form-control" type="date" />
                            <span asp-validation-for="VizyonTarihi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AfişUrl" class="form-label">Poster URL</label>
                            <input asp-for="AfişUrl" class="form-control" />
                            <span asp-validation-for="AfişUrl" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="FragmanUrl" class="form-label">Fragman URL</label>
                            <input asp-for="FragmanUrl" class="form-control" />
                            <span asp-validation-for="FragmanUrl" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="ManageMovies" class="btn btn-secondary">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 