@model AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1 class="mb-4">Admin Dashboard</h1>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Movies</h5>
                    <h2 class="card-text">@Model.TotalMovies</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Users</h5>
                    <h2 class="card-text">@Model.TotalUsers</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Reviews</h5>
                    <h2 class="card-text">@Model.TotalReviews</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Average Rating</h5>
                    <h2 class="card-text">@Model.AverageRating.ToString("F1")</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Actions</h5>
                    <div class="d-flex gap-2">
                        <a asp-action="AddMovie" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Movie
                        </a>
                        <a asp-action="ManageUsers" class="btn btn-secondary">
                            <i class="bi bi-people"></i> Manage Users
                        </a>
                        <a asp-action="ManageCategories" class="btn btn-info">
                            <i class="bi bi-tags"></i> Manage Categories
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4 bg-dark text-light">
                <div class="card-body">
                    <h5 class="card-title">Recent Reviews</h5>
                    <div class="list-group">
                        @foreach (var review in Model.RecentReviews)
                        {
                            <div class="list-group-item bg-dark text-light border-secondary">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@review.MovieTitle</h6>
                                        <small class="text-muted">By @review.UserName</small>
                                    </div>
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= review.Rating ? "-fill" : "")"></i>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-4 bg-dark text-light">
                <div class="card-body">
                    <h5 class="card-title">New Users</h5>
                    <div class="list-group">
                        @foreach (var user in Model.NewUsers)
                        {
                            <div class="list-group-item bg-dark text-light border-secondary">
                                <div class="d-flex align-items-center">
                                    <img src="@user.AvatarUrl" class="rounded-circle me-3" width="40" height="40" alt="@user.UserName">
                                    <div>
                                        <h6 class="mb-0">@user.UserName</h6>
                                        <small class="text-muted">Joined @user.JoinDate.ToString("MMM dd, yyyy")</small>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Movie Management -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Movie Management</h5>
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Kategori</th>
                            <th>Derecelendirme</th>
                            <th>İncelemeler</th>
                            <th>Eylemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in Model.RecentMovies)
                        {
                            <tr>
                                <td>@movie.Title</td>
                                <td>@movie.Category</td>
                                <td>
                                    <div class="rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="bi bi-star@(i <= movie.Rating ? "-fill" : "")"></i>
                                        }
                                        <span class="ms-2">@movie.Rating.ToString("F1")</span>
                                    </div>
                                </td>
                                <td>@movie.ReviewCount</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <form asp-action="DeleteMovie" asp-route-id="@movie.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this movie?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 