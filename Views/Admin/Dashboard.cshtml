@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    .admin-dashboard-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        padding: 30px 0;
        color: white;
    }

    .stats-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 40px 0 rgba(31, 38, 135, 0.5);
    }

    .stats-card.bg-primary {
        background: linear-gradient(45deg, #007bff, #0056b3) !important;
    }

    .stats-card.bg-success {
        background: linear-gradient(45deg, #28a745, #1e7e34) !important;
    }

    .stats-card.bg-info {
        background: linear-gradient(45deg, #17a2b8, #117a8b) !important;
    }

    .stats-card.bg-warning {
        background: linear-gradient(45deg, #ffc107, #e0a800) !important;
    }

    .stats-icon {
        font-size: 2.5rem;
        margin-bottom: 15px;
        opacity: 0.8;
    }

    .stats-number {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .stats-label {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .content-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 25px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        margin-bottom: 20px;
    }

    .content-card h5 {
        color: white;
        font-weight: 600;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

    .content-card h5 i {
        margin-right: 10px;
        color: #4ecdc4;
    }

    .btn-admin {
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        margin-right: 10px;
        margin-bottom: 10px;
    }

    .btn-admin:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
        color: white;
        text-decoration: none;
    }

    .table-dark {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 10px;
        overflow: hidden;
    }

    .table-dark th {
        background: rgba(255, 255, 255, 0.1);
        border: none;
        color: white;
        font-weight: 600;
    }

    .table-dark td {
        border: none;
        color: #b8b8b8;
        vertical-align: middle;
    }

    .table-dark tbody tr:hover {
        background: rgba(255, 255, 255, 0.05);
    }

    .rating {
        display: flex;
        align-items: center;
    }

    .rating i {
        color: #ffc107;
        margin-right: 2px;
    }

    .btn-group .btn {
        margin-right: 5px;
        border-radius: 6px;
    }

    .welcome-header {
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 30px;
        text-align: center;
    }

    .success-message {
        background: rgba(76, 175, 80, 0.2);
        border: 1px solid rgba(76, 175, 80, 0.3);
        color: #4caf50;
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 20px;
    }
</style>

<div class="admin-dashboard-container">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="success-message">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
            </div>
        }

        <h1 class="welcome-header">
            <i class="bi bi-speedometer2 me-3"></i>
            Admin Dashboard
        </h1>

        <!-- Statistics Cards -->
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="stats-card bg-primary">
                    <div class="stats-icon">
                        <i class="bi bi-film"></i>
                    </div>
                    <div class="stats-number">@ViewBag.TotalMovies</div>
                    <div class="stats-label">Toplam Film</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card bg-success">
                    <div class="stats-icon">
                        <i class="bi bi-people"></i>
                    </div>
                    <div class="stats-number">@ViewBag.TotalUsers</div>
                    <div class="stats-label">Toplam Kullanıcı</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card bg-info">
                    <div class="stats-icon">
                        <i class="bi bi-eye"></i>
                    </div>
                    <div class="stats-number">@ViewBag.TotalViews</div>
                    <div class="stats-label">Toplam İzlenme</div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card bg-warning">
                    <div class="stats-icon">
                        <i class="bi bi-star"></i>
                    </div>
                    <div class="stats-number">@ViewBag.AvgRating</div>
                    <div class="stats-label">Ortalama Puan</div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="content-card">
                    <h5><i class="bi bi-lightning"></i>Hızlı İşlemler</h5>
                    <div class="d-flex flex-wrap">
                        <a asp-action="AddMovie" class="btn btn-admin">
                            <i class="bi bi-plus-circle me-2"></i> Film Ekle
                        </a>
                        <a asp-action="ManageMovies" class="btn btn-admin">
                            <i class="bi bi-collection me-2"></i> Filmleri Yönet
                        </a>
                        <a asp-action="SyncMovies" class="btn btn-admin">
                            <i class="bi bi-arrow-repeat me-2"></i> Filmleri Senkronize Et
                        </a>
                        <a asp-action="Logout" class="btn btn-admin" style="background: linear-gradient(45deg, #dc3545, #c82333);">
                            <i class="bi bi-box-arrow-right me-2"></i> Çıkış Yap
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Movies -->
        <div class="content-card">
            <h5><i class="bi bi-clock-history"></i>Son Eklenen Filmler</h5>
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Tür</th>
                            <th>Yıl</th>
                            <th>Puan</th>
                            <th>İzlenme</th>
                            <th>Eylemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (ViewBag.RecentMovies != null && ViewBag.RecentMovies.Count > 0)
                        {
                            @foreach (var movie in ViewBag.RecentMovies)
                            {
                                <tr>
                                    <td>@movie.Ad</td>
                                    <td>@movie.Tür</td>
                                    <td>@movie.Yil</td>
                                    <td>
                                        <div class="rating">
                                            @for (int j = 1; j <= 5; j++)
                                            {
                                                <i class="bi bi-star@(j <= movie.Puan ? "-fill" : "")"></i>
                                            }
                                            <span class="ms-2">@movie.Puan.ToString("F1")</span>
                                        </div>
                                    </td>
                                    <td>@movie.IzlenmeSayisi</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="EditMovie" asp-route-id="@movie.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <form asp-action="DeleteMovie" asp-route-id="@movie.Id" method="post" style="display: inline;" 
                                                  onsubmit="return confirm('Bu filmi silmek istediğinizden emin misiniz?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">Henüz film eklenmemiş.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 