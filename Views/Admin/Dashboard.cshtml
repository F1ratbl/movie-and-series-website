@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container">
    <h1 class="mb-4">Admin Dashboard</h1>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Toplam Film</h5>
                    <h2 class="card-text">150</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Toplam Kullanıcı</h5>
                    <h2 class="card-text">500</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Toplam İzlenme</h5>
                    <h2 class="card-text">5000</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Ortalama Puan</h5>
                    <h2 class="card-text">8.2</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Hızlı İşlemler</h5>
                    <div class="d-flex gap-2">
                        <a asp-action="AddMovie" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Film Ekle
                        </a>
                        <a asp-action="ManageUsers" class="btn btn-secondary">
                            <i class="bi bi-people"></i> Kullanıcıları Yönet
                        </a>
                        <a asp-action="ManageCategories" class="btn btn-info">
                            <i class="bi bi-tags"></i> Kategorileri Yönet
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Movies -->
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Son Eklenen Filmler</h5>
            <div class="table-responsive">
                <table class="table table-dark table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Başlık</th>
                            <th>Tür</th>
                            <th>Yıl</th>
                            <th>Puan</th>
                            <th>Eylemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 5; i++)
                        {
                            <tr>
                                <td>Örnek Film @i</td>
                                <td>Aksiyon</td>
                                <td>2024</td>
                                <td>
                                    <div class="rating">
                                        @for (int j = 1; j <= 5; j++)
                                        {
                                            <i class="bi bi-star@(j <= 4 ? "-fill" : "")"></i>
                                        }
                                        <span class="ms-2">8.@i</span>
                                    </div>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 