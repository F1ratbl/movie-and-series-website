@model FilmDiziSitesi.Models.MovieModel
@{
    ViewData["Title"] = "Yeni Film Ekle";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card bg-dark text-light" style="border-color: #30363d;">
            <div class="card-header" style="background-color: #161b22; border-bottom: 1px solid #30363d;">
                <h4 class="mb-0">Yeni Film Bilgileri</h4>
            </div>
            <div class="card-body">
                <form asp-action="AddMovie">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Ad" class="form-label">Başlık</label>
                            <input asp-for="Ad" class="form-control bg-dark text-white" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Tür" class="form-label">Tür (Virgülle ayırın)</label>
                            <input asp-for="Tür" class="form-control bg-dark text-white" />
                            <span asp-validation-for="Tür" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Yönetmen" class="form-label">Yönetmen</label>
                            <input asp-for="Yönetmen" class="form-control bg-dark text-white" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Oyuncular" class="form-label">Oyuncular (virgülle ayırın)</label>
                            <input asp-for="Oyuncular" class="form-control bg-dark text-white" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Ülke" class="form-label">Ülke</label>
                            <input asp-for="Ülke" class="form-control bg-dark text-white" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Dil" class="form-label">Dil</label>
                            <input asp-for="Dil" class="form-control bg-dark text-white" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Bütçe" class="form-label">Bütçe</label>
                            <input asp-for="Bütçe" type="number" class="form-control bg-dark text-white" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="GiseHasilati" class="form-label">Gişe Hasılatı</label>
                            <input asp-for="GiseHasilati" type="number" class="form-control bg-dark text-white" />
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="IzlenmeSayisi" class="form-label">İzlenme Sayısı</label>
                            <input asp-for="IzlenmeSayisi" type="number" class="form-control bg-dark text-white" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Açıklama" class="form-label"></label>
                        <textarea asp-for="Açıklama" class="form-control bg-dark text-white" rows="4"></textarea>
                        <span asp-validation-for="Açıklama" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <label asp-for="Yil" class="form-label">Yıl</label>
                            <input asp-for="Yil" type="number" class="form-control bg-dark text-white" />
                            <span asp-validation-for="Yil" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="Puan" class="form-label">Puan (1-10)</label>
                            <input asp-for="Puan" type="number" step="0.1" class="form-control bg-dark text-white" />
                            <span asp-validation-for="Puan" class="text-danger"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="Süre" class="form-label">Süre</label>
                            <input asp-for="Süre" class="form-control bg-dark text-white" placeholder="02:30:00" />
                            <span asp-validation-for="Süre" class="text-danger"></span>
                        </div>
                         <div class="col-md-3 mb-3">
                            <label asp-for="VizyonTarihi" class="form-label">Vizyon Tarihi</label>
                            <input asp-for="VizyonTarihi" type="date" class="form-control bg-dark text-white" />
                            <span asp-validation-for="VizyonTarihi" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="AfişUrl" class="form-label">Afiş URL</label>
                        <input asp-for="AfişUrl" class="form-control bg-dark text-white" />
                        <span asp-validation-for="AfişUrl" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="FragmanUrl" class="form-label">Fragman URL</label>
                        <input asp-for="FragmanUrl" class="form-control bg-dark text-white" />
                        <span asp-validation-for="FragmanUrl" class="text-danger"></span>
                    </div>

                    <div class="mt-4 d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="ManageMovies" class="btn btn-secondary">İptal</a>
                        <button type="submit" class="btn btn-primary">Filmi Kaydet</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 