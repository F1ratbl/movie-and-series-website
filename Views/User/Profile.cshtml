@using FilmDiziSitesi.Models
@model FilmDiziSitesi.Models.UserModel
@{
    ViewData["Title"] = "Profile";
}
<link rel="stylesheet" href="/css/profile-custom.css" />
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="profile-card">
                <img src="/images/default-avatar.png" class="profile-avatar" alt="@Model.KullaniciAdi">
                <div class="profile-info">
                    <h3>@Model.KullaniciAdi</h3>
                    <p>@Model.Email</p>
                </div>
                <div class="profile-stats">
                    <div class="profile-stat">
                        <div class="stat-label">Kayıt Tarihi</div>
                        <div class="stat-value">@Model.KayitTarihi.ToString("dd.MM.yyyy")</div>
                    </div>
                    <div class="profile-stat">
                        <div class="stat-label">Rol</div>
                        <div class="stat-value">@Model.Role</div>
                    </div>
                </div>
                <a asp-action="EditProfile" class="btn btn-danger w-100 mt-2">Profili Düzenle</a>
            </div>
        </div>
        <div class="col-lg-8 col-md-12">
            <div class="profile-section mb-4">
                <h5><i class="bi bi-chat-left-text me-2"></i>Son Yorumlar</h5>
                <div class="text-muted">Henüz yorum yapmadınız.</div>
            </div>
            <div class="profile-section">
                <h5><i class="bi bi-star me-2"></i>Son Puanlamalar</h5>
                <div class="text-muted">Henüz puanlama yapmadınız.</div>
            </div>
        </div>
    </div>
</div> 