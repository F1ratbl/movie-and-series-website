@model FilmDiziSitesi.Models.UserModel
@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<style>
    .auth-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 100%);
        padding: 50px 0;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        max-width: 450px;
        margin: 0 auto;
    }

    .auth-title {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .auth-subtitle {
        color: #b8b8b8;
        text-align: center;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    .form-floating {
        margin-bottom: 20px;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        height: 50px;
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: rgba(255, 255, 255, 0.3);
        color: white;
        box-shadow: none;
    }

    .form-floating label {
        color: #b8b8b8;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #4ecdc4;
    }

    .btn-reset {
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        border: none;
        color: white;
        padding: 12px 0;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        width: 100%;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .btn-reset:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
    }

    .auth-links {
        text-align: center;
    }

    .auth-links a {
        color: #4ecdc4;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .auth-links a:hover {
        color: #ff6b6b;
    }

    .info-box {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 30px;
        color: #b8b8b8;
    }

    .info-box i {
        color: #4ecdc4;
        margin-right: 10px;
    }
</style>

<div class="auth-container">
    <div class="container">
        <div class="auth-card">
            <h1 class="auth-title">Şifremi Unuttum</h1>
            <p class="auth-subtitle">E-posta adresinizi girin, şifre sıfırlama bağlantısı gönderelim</p>

            <div class="info-box">
                <i class="bi bi-info-circle"></i>
                E-posta adresinizi girdiğinizde, şifrenizi sıfırlamanız için bir bağlantı göndereceğiz.
            </div>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form method="post">
                <div class="form-floating">
                    <input type="email" class="form-control" id="Email" name="Email" placeholder="name@example.com" required>
                    <label for="Email">E-posta Adresi</label>
                </div>

                <button type="submit" class="btn btn-reset">
                    <i class="bi bi-envelope me-2"></i>
                    Şifre Sıfırlama Bağlantısı Gönder
                </button>
            </form>

            <div class="auth-links">
                <a href="/User/Login">
                    <i class="bi bi-arrow-left me-1"></i>
                    Giriş sayfasına dön
                </a>
            </div>
        </div>
    </div>
</div> 