@model FilmDiziSitesi.Models.UserModel
@{
    ViewData["Title"] = "Giriş Yap";
}

<style>
    .auth-container {
        min-height: 100vh;
        /* A more vibrant, cinema-themed background */
        background-image: linear-gradient(rgba(22, 33, 62, 0.85), rgba(26, 26, 46, 0.9)), url('https://images.unsplash.com/photo-1536440136628-849c177e76a1?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1625&q=80');
        background-size: cover;
        background-position: center;
        padding: 50px 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .auth-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        border: 1px solid rgba(255, 255, 255, 0.18);
        max-width: 450px;
        margin: 0 auto;
    }

    .auth-title {
        color: white;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 30px;
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .auth-subtitle {
        color: #b8b8b8;
        text-align: center;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    .form-group {
        margin-bottom: 20px;
    }
    
    .form-label {
        color: #b8b8b8;
        margin-bottom: 8px;
        font-weight: 500;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #e0e0e0;
        height: 50px;
        transition: none;
    }

    /* Override browser's autofill styles */
    .form-control:-webkit-autofill,
    .form-control:-webkit-autofill:hover,
    .form-control:-webkit-autofill:focus,
    .form-control:-webkit-autofill:active {
        -webkit-text-fill-color: #e0e0e0 !important;
        -webkit-box-shadow: 0 0 0 30px #1a2035 inset !important; /* Use a solid color from the theme */
        box-shadow: 0 0 0 30px #1a2035 inset !important;
        caret-color: #fff;
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.15);
        border-color: #4ecdc4;
        color: white;
        box-shadow: 0 0 0 0.25rem rgba(78, 205, 196, 0.25);
    }

    .form-floating label {
        color: #b8b8b8;
    }

    .form-floating > .form-control:focus ~ label,
    .form-floating > .form-control:not(:placeholder-shown) ~ label {
        color: #4ecdc4;
    }

    .btn-login {
        background: linear-gradient(45deg, #ff6b6b, #4ecdc4);
        border: none;
        color: white;
        padding: 12px 0;
        font-size: 1.1rem;
        font-weight: 600;
        border-radius: 10px;
        width: 100%;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .btn-login:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(255, 107, 107, 0.4);
    }

    .auth-links {
        text-align: center;
    }

    .auth-links a {
        color: #4ecdc4;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .auth-links a:hover {
        color: #ff6b6b;
    }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 30px 0;
        color: #b8b8b8;
    }

    .divider::before,
    .divider::after {
        content: '';
        flex: 1;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .divider span {
        padding: 0 10px;
    }

    .social-login {
        display: flex;
        justify-content: center;
        gap: 15px;
        margin-bottom: 20px;
    }

    .social-btn {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: white;
        font-size: 1.2rem;
        transition: all 0.3s ease;
    }

    .social-btn:hover {
        transform: translateY(-2px);
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    .text-danger {
        color: #ff6b6b !important;
        font-size: 0.9rem;
        margin-top: 5px;
        display: block;
    }
</style>

<div class="auth-container">
    <div class="container">
        <div class="auth-card">
            <h1 class="auth-title">HDFilmCenneti'ne Hoş Geldiniz</h1>
            <p class="auth-subtitle">Film ve dizi dünyasına giriş yapın</p>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email" class="form-label">E-posta Adresi</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="ornek@eposta.com" required />
                </div>

                <div class="form-group">
                    <label asp-for="Sifre" class="form-label">Şifre</label>
                    <input asp-for="Sifre" class="form-control" type="password" placeholder="••••••••" required />
                </div>

                <div class="d-flex justify-content-between align-items-center mt-3">
                    <a asp-controller="User" asp-action="ForgotPassword" class="text-link">Şifremi Unuttum</a>
                    <button type="submit" class="btn btn-submit">Giriş Yap</button>
                </div>
            </form>

            <hr class="auth-divider">

            <div class="text-center">
                <p class="mb-0" style="color: #b8b8b8;">
                    Hesabın yok mu? 
                    <a asp-controller="User" asp-action="Register" class="text-link fw-bold">Kayıt Ol</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form submit olduğunda loading state ekle
        document.querySelector('form').addEventListener('submit', function() {
            const button = document.querySelector('.btn-login');
            button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Giriş Yapılıyor...';
            button.disabled = true;
        });
    </script>
} 