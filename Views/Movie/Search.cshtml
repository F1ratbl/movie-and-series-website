@model IEnumerable<FilmDiziSitesi.Models.MovieModel>
@{
    ViewData["Title"] = "Arama Sonuçları";
}

<div class="container">
    <div class="search-results">
        <h2 class="mb-4">"@ViewBag.SearchQuery" için arama sonuçları</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                Aramanız için sonuç bulunamadı. Farklı anahtar kelimeler deneyin veya kategorilerimizi keşfedin.
            </div>
        }
        else
        {
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 mb-4">
                        <div class="card h-100">
                            <img src="@item.AfişUrl" class="card-img-top" alt="@item.Ad">
                            <div class="card-body">
                                <h5 class="card-title">@item.Ad</h5>
                                <div class="rating mb-2">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <i class="bi bi-star@(i <= item.Puan ? "-fill" : "")"></i>
                                    }
                                    <span class="ms-2">@item.Puan.ToString("F1")</span>
                                </div>
                                <p class="card-text">@item.Açıklama</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">@item.Tür</span>
                                    <small class="text-muted">@item.Yil</small>
                                </div>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mt-3 w-100">Detayları Gör</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <div class="mt-4">
            <h4>Kategorilerde arama yapmayı deneyin:</h4>
            <div class="d-flex flex-wrap gap-2 mt-3">
                <a href="#" class="badge bg-primary text-decoration-none">Aksiyon</a>
                <a href="#" class="badge bg-primary text-decoration-none">Komedi</a>
                <a href="#" class="badge bg-primary text-decoration-none">Drama</a>
                <a href="#" class="badge bg-primary text-decoration-none">Gerilim</a>
                <a href="#" class="badge bg-primary text-decoration-none">Bilim Kurgu</a>
                <a href="#" class="badge bg-primary text-decoration-none">Romantik</a>
            </div>
        </div>
    </div>
</div> 