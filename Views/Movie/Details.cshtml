@model MovieModel
@{
    ViewData["Title"] = Model.Ad;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.AfişUrl" class="img-fluid rounded" alt="@Model.Ad">
        </div>
        <div class="col-md-8">
            <h1>@Model.Ad</h1>
            <div class="rating mb-3">
                @for (int i = 1; i <= 5; i++)
                {
                    <i class="bi bi-star@(i <= Model.Puan ? "-fill" : "")"></i>
                }
                <span class="ms-2">@Model.Puan.ToString("F1")</span>
            </div>
            <p class="text-muted">
                <i class="bi bi-calendar"></i> @Model.Yil
                <i class="bi bi-clock ms-3"></i> @Model.Süre.ToString(@"hh\:mm") dakika
                <i class="bi bi-film ms-3"></i> @Model.Tür
            </p>
            <p>@Model.Açıklama</p>
            <div class="mb-3">
                <strong>Yönetmen:</strong> @Model.Yönetmen
            </div>
            <div class="mb-3">
                <strong>Oyuncular:</strong> @Model.Oyuncular
            </div>
            <div class="mb-3">
                <strong>Dil:</strong> @Model.Dil
            </div>
            <!-- İzleme, oynat, fragman bölümleri kaldırıldı. Yorum ve puanlama formu öne çıkarıldı. -->
        </div>
    </div>
</div>

<style>
    .rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }
    
    .rating input {
        display: none;
    }
    
    .rating label {
        font-size: 30px;
        color: #ddd;
        cursor: pointer;
    }
    
    .rating input:checked ~ label {
        color: #ffd700;
    }
    
    .rating label:hover,
    .rating label:hover ~ label {
        color: #ffd700;
    }
</style>
