@{
    ViewData["Title"] = "Filmler";
}

<div class="container">
    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-md-3">
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-3">Filtreler</h5>
                    <form asp-controller="Movie" asp-action="Index" method="get">
                        <div class="mb-3">
                            <label class="form-label">Kategori</label>
                            <select name="category" class="form-select">
                                <option value="">Tüm Kategoriler</option>
                                <option value="Aksiyon">Aksiyon</option>
                                <option value="Komedi">Komedi</option>
                                <option value="Drama">Drama</option>
                                <option value="Gerilim">Gerilim</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Yıl</label>
                            <select name="year" class="form-select">
                                <option value="">Tüm Yıllar</option>
                                <option value="2024">2024</option>
                                <option value="2023">2023</option>
                                <option value="2022">2022</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Puan</label>
                            <select name="minRating" class="form-select">
                                <option value="">Herhangi Bir Puan</option>
                                <option value="4">4+ Yıldız</option>
                                <option value="3">3+ Yıldız</option>
                                <option value="2">2+ Yıldız</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Sıralama</label>
                            <select name="sortBy" class="form-select">
                                <option value="rating">Puana Göre</option>
                                <option value="year">Yıla Göre</option>
                                <option value="title">Başlığa Göre</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Filtreleri Uygula</button>
                    </form>
                </div>
            </div>
        </div>

        <!-- Movie List -->
        <div class="col-md-9 bg-dark text-light rounded p-3">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>Filmler</h2>
                <div class="btn-group">
                    <a href="#" class="btn btn-outline-light active">
                        <i class="bi bi-grid"></i>
                    </a>
                    <a href="#" class="btn btn-outline-light">
                        <i class="bi bi-list"></i>
                    </a>
                </div>
            </div>

            <div class="row">
                @for (int i = 1; i <= 9; i++)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card h-100 bg-dark text-light">
                            <img src="https://via.placeholder.com/300x450/2c3e50/ffffff?text=Film+@i" class="card-img-top" alt="Film @i">
                            <div class="card-body">
                                <h5 class="card-title">Örnek Film @i</h5>
                                <div class="rating mb-2">
                                    @for (int j = 1; j <= 5; j++)
                                    {
                                        <i class="bi bi-star@(j <= 4 ? "-fill" : "")"></i>
                                    }
                                    <span class="ms-2">8.@i</span>
                                </div>
                                <p class="card-text">Bu bir örnek film açıklamasıdır. Film hakkında kısa bilgi verir.</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-primary">Aksiyon</span>
                                    <small class="text-muted">2024</small>
                                </div>
                                <a href="#" class="btn btn-primary mt-3 w-100">Detayları Gör</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            <nav class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Önceki</a>
                    </li>
                    <li class="page-item active">
                        <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">Sonraki</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div> 