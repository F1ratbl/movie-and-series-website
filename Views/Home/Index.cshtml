@{
    ViewData["Title"] = "Home";
}

<div class="hero-section mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h1 class="display-4 fw-bold">Welcome to MovieHub</h1>
                <p class="lead">Discover and rate your favorite movies and TV series</p>
                <div class="d-flex gap-3">
                    <a asp-controller="Movie" asp-action="Index" class="btn btn-primary">Browse Movies</a>
                    <a asp-controller="Movie" asp-action="Series" class="btn btn-outline-light">Browse Series</a>
                </div>
            </div>
            <div class="col-md-6">
                <img src="~/images/hero-image.jpg" alt="Movie Hub" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</div>

<div class="container">
    <!-- Featured Movies -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Featured Movies</h2>
            <a asp-controller="Movie" asp-action="Index" class="btn btn-outline-light">View All</a>
        </div>
        <div class="row">
            @foreach (var movie in Model.FeaturedMovies)
            {
                <div class="col-md-3">
                    <div class="card h-100">
                        <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Title">
                        <div class="card-body">
                            <h5 class="card-title">@movie.Title</h5>
                            <div class="rating mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= movie.Rating ? "-fill" : "")"></i>
                                }
                                <span class="ms-2">@movie.Rating.ToString("F1")</span>
                            </div>
                            <p class="card-text">@movie.ShortDescription</p>
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@movie.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Featured Series -->
    <section class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2>Featured Series</h2>
            <a asp-controller="Movie" asp-action="Series" class="btn btn-outline-light">View All</a>
        </div>
        <div class="row">
            @foreach (var series in Model.FeaturedSeries)
            {
                <div class="col-md-3">
                    <div class="card h-100">
                        <img src="@series.PosterUrl" class="card-img-top" alt="@series.Title">
                        <div class="card-body">
                            <h5 class="card-title">@series.Title</h5>
                            <div class="rating mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= series.Rating ? "-fill" : "")"></i>
                                }
                                <span class="ms-2">@series.Rating.ToString("F1")</span>
                            </div>
                            <p class="card-text">@series.ShortDescription</p>
                            <a asp-controller="Movie" asp-action="SeriesDetails" asp-route-id="@series.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>

    <!-- Categories -->
    <section class="mb-5">
        <h2 class="mb-4">Browse by Category</h2>
        <div class="row">
            @foreach (var category in Model.Categories)
            {
                <div class="col-md-3 mb-3">
                    <a asp-controller="Movie" asp-action="Category" asp-route-category="@category.Name" class="text-decoration-none">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="bi @category.Icon display-4 mb-3"></i>
                                <h5 class="card-title">@category.Name</h5>
                                <p class="card-text text-muted">@category.Count items</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </section>

    <!-- Latest Reviews -->
    <section class="mb-5">
        <h2 class="mb-4">Latest Reviews</h2>
        <div class="row">
            @foreach (var review in Model.LatestReviews)
            {
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <img src="@review.UserAvatar" class="rounded-circle me-3" width="40" height="40" alt="@review.UserName">
                                <div>
                                    <h6 class="mb-0">@review.UserName</h6>
                                    <small class="text-muted">@review.Date.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                            <h5 class="card-title">@review.Title</h5>
                            <div class="rating mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi bi-star@(i <= review.Rating ? "-fill" : "")"></i>
                                }
                            </div>
                            <p class="card-text">@review.Content</p>
                            <a asp-controller="Movie" asp-action="Details" asp-route-id="@review.MovieId" class="btn btn-outline-light">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </section>
</div>
